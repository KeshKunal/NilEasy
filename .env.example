# Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development  # development, staging, or production

# ============================================================
# DATABASE
# ============================================================
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=nileasy
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# ============================================================
# WHATSAPP / AISENSY
# ============================================================
AISENSY_API_KEY=your_api_key_here
AISENSY_WEBHOOK_SECRET=your_webhook_secret
AISENSY_BASE_URL=https://backend.aisensy.com

# ============================================================
# GST VERIFICATION SERVICE
# ============================================================
GST_SERVICE_URL=http://localhost:5001
GST_SERVICE_TIMEOUT=30

# ============================================================
# SESSION & RATE LIMITING
# ============================================================
SESSION_TIMEOUT_MINUTES=30
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_MESSAGES_PER_MINUTE=5
RATE_LIMIT_GSTIN_LOOKUPS_PER_HOUR=10

# ============================================================
# APPLICATION
# ============================================================
DEBUG=False
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# ============================================================
# SECURITY
# ============================================================
SECRET_KEY=change-me-in-production-to-a-secure-random-string
